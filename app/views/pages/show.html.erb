<script>
	// Scroll to anchor tags
	$('a[href*="#"]:not([href="#"])').click(function() {
	  if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') && location.hostname == this.hostname) {
	    var target = $(this.hash);
	    console.log(target.selector)
	    target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
	    if (target.length) {
	      $('html, body').animate({
	        scrollTop: target.offset().top
	      }, 1000);
	      return false;
	    }
	  }
	});

	$('.red-half-circle').on('click', function(){
		$('html, body').animate({
			scrollTop: $('#donovan').offset().top - 90
		}, 1000)
	})

	// Scroll to top from logo
	$('.logo').on('click', function(){
		$('html, body').animate({
			scrollTop: 0
		}, 1000)
	})

	$('.inquiry-thank-you').hide()
	//General Inquiry Submit
	$('#general-inquiry').on('submit', function(e){
		e.preventDefault()
		$('#general-inquiry').trigger('submit.rails');
		$('.inquiry-thank-you').show()
		$('html, body').animate({
			scrollTop: $('.inquiry-thank-you').offset().top - 90
		}, 500)
		$('#general-inquiry').trigger("reset");
	})
		

	//Bailey Form Submit
	$('.bailey-inc-submit').hide()
	$('.bailey-thank-you').hide()
	$('.more-info').hide()


	$('.bailey-form-fields').on('submit', function(e){
		e.preventDefault();
			$('bailey-form-fields').trigger('submit.rails');
			$('.bailey-form').hide()
			$('.bailey-thank-you').show()
			$('html, body').animate({
				scrollTop: $('.bailey-thank-you').offset().top - 180
			}, 500)

		
	})

	// Bailey Form show/hide
	$('.bailey-form .second').hide();


	$('button.next').on('click', function(e){
			var form_ok = true
			$('.required').each(function(index, field){
				if(field.value == ""){
					form_ok = false
				}
			})
			if(form_ok){
				$('.dots span').removeClass('active')
				$('button.next').hide();
				$('.more-info').hide()
				$('.bailey-inc-submit').show()

				$('[data-panel='+$(this).data("panel")+']').addClass('active')

				slide = "." +$(this).data('panel')
				other = "." + $(this).data('other')
		 		$(slide).toggle({direction: 'left'}, 50)
		 		$(other).toggle({direction: 'left'}, 50)
		 	} else {
		 		$('.more-info').show()
		 		$('.required').css('border', '1px solid #E83A3B')
		 	}
	})


	$('.bailey-form .dots [data-panel=first]').addClass('active');

	$('.dots span').on('click', function(){
		$('.dots span').removeClass('active')

		$('[data-panel='+$(this).data("panel")+']').addClass('active')
		$('button.next').removeClass('active')

		slide = "." +$(this).data('panel')
		other = "." + $(this).data('other')
 		$(slide).toggle({direction: 'left'}, 50)
 		$(other).toggle({direction: 'left'}, 50)
	})



	// Responsive Menu
	$('.main--toggle').on('click', function(e){
		e.preventDefault()
		$(this).toggleClass('active');
		$('.menu--main').slideToggle('normal')
		$('.menu--main').hasClass('.active') ? $('.menu--main').removeClass('.active') : $('.menu--main').addClass('.active')
	});

	function mainMenuSmall(){
		if(windowSize <= 959 ){
			$('.menu--main').hasClass('.active') ? null : $('.menu--main').css('display', 'none')
		}else{
			$('.menu--main').css('display', 'flex').addClass('active')
		}
	}


	// var theWidth = $(window).width();
	// $(window).smartresize(function(){
	// 	if($(this).width() != theWidth){
	// 		windowSize = $(window).innerWidth()
	// 		mainMenuSmall()
	// 		theWidth = $(this).width()
	// 	}
	// });

	mainMenuSmall()
</script>



