<p id="notice"><%= notice %></p>

<h1>Athlete Stories</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Pages</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @athlete_stories.each do |athlete_story| %>
      <tr>
        <td><%= athlete_story.description %></td>
        <td><%= athlete_story.pages %></td>
        <td><%= link_to 'Show', athlete_story %></td>
        <td><%= link_to 'Edit', edit_athlete_story_path(athlete_story) %></td>
        <td><%= link_to 'Destroy', athlete_story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

